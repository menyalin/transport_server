{
  "env": {
    "browser": false,
    "es2021": true
  },
  "sourceType": "module",
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "semi": ["error", "never"],
    "quotes": ["error", "single"],
    "comma-dangle": ["error", "only-multiline", { "functions": "never" }],
    "arrow-spacing": "error"
  }
}
